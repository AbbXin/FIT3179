          "Canada",
          "Chile", 
          "China", 
          "Ireland", 
          "Portugal",
          "Spain",
          "UK",
          "Uruguay"
    ],
    "name": "Country Selection: " }
    } ],
    "spacing": 0,
    "vconcat": [
      {"width": 400,
      "height": 200,
      "transform": [
